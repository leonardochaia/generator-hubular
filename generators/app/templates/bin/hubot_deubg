#!/bin/sh

set -e

basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/coffee" ]; then
  "$basedir/coffee" --nodejs --inspect "$basedir/../node_modules/hubot/bin/hubot" --name "<%= botName %>" "$@"
  ret=$?
else 
  coffee --nodejs --inspect "$basedir/../node_modules/hubot/bin/hubot" --name "<%= botName %>" "$@"
  ret=$?
fi
exit $ret
